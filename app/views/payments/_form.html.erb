<%= turbo_frame_tag payment do %>
  <%= form_with(model: payment) do |form| %>
    <div class="flex flex-row">
      <div class="flex-1">
        <%= form.date_field :paid_at %>
        <%= attribute_errors(payment, :paid_at)%>
      </div>

      <div class="flex-1">
        <%= form.number_field :amount %>
        <%= attribute_errors(payment, :amount)%>
      </div>

      <div class="flex-1">
        <%= form.collection_select :kind, Payment.kinds, :first, :first %>
        <%= attribute_errors(payment, :kind)%>
      </div>

      <div class="flex-1">
        <%= form.text_field :name %>
        <%= attribute_errors(payment, :name)%>
      </div>

      <div class="flex-1">
        <%= form.text_area :note %>
        <%= attribute_errors(payment, :note)%>
      </div>

      <div class="flex-1">
        <%= form.submit %>
      </div>

      <div class="flex-1">
        <%= link_to "キャンセル", payment, class: "bg-red-500 text-white px-2 py-2 border rounded-md hover:bg-white hover:border-indigo-500 hover:text-black" %>
      </div>
    </div>
  <% end %>
<% end %>
