<p style="color: green"><%= notice %></p>

<%= render @payment %>

<div>
  <div class="mt-5">
    <%= link_to "Edit this payment", edit_payment_path(@payment), class: "bg-gray-500 text-white mr-5 px-4 py-2 border rounded-md hover:bg-white hover:border-gray-500 hover:text-black" %>
    <%= link_to "Back to payments", payments_path, class: "bg-indigo-500 text-white px-4 py-2 border rounded-md hover:bg-white hover:border-indigo-500 hover:text-black" %>
  </div>

  <%= button_to "Destroy this payment", @payment, method: :delete, class: "bg-red-500 text-white px-4 py-2 border rounded-md hover:bg-white hover:border-indigo-500 hover:text-black mt-10" %>
</div>
