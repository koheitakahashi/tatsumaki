<div id="<%= dom_id payment %>" class="flex flex-row">
  <p class="flex-1 mb-2">
    <%= payment.paid_at.strftime("%Y/%m/%d") %>
  </p>

  <p class="flex-1 mb-2">
    <%= payment.amount %>
  </p>

  <p class="flex-1 mb-2">
    <%= payment.kind %>
  </p>

  <p class="flex-1 mb-2">
    <%= payment.name %>
  </p>

  <p class="flex-1 mb-2">
    <%= payment.note %>
  </p>

  <div class="flex-1">
    <div class="flex flex-row">
      <%= link_to "Edit", edit_payment_path(payment), class: "bg-gray-500 text-white px-2 py-2 border rounded-md hover:bg-white hover:border-gray-500 hover:text-black" %>

      <%= link_to "Destroy", payment_path(payment), method: :delete, class: "bg-red-500 text-white px-2 py-2 border rounded-md hover:bg-white hover:border-indigo-500 hover:text-black" %>
    </div>
  </div>
</div>
